/*动画模块*/
/*mask*/  
.drawer_screen {  
  width: 100%;  
  height: 100%;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 1000;  
  background: #000;  
  opacity: 0.4;  
  overflow: hidden; 
  border-top: 1rpx solid white; 
}
.max-model{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0rpx;
  font-size: 30rpx;
  background: #F6F6F8;
  z-index: 9999;
}
.max-model .max-model1{
  width: 100%;
  height: 100%;
  background: #F2F2F2;
  z-index: 9999;
  display: flex;
}
.max-model .top{
  width: 100%;
  height: 70rpx;
  float: left;
  overflow: hidden;
}
.max-model .top .title{
  display: flex;
  justify-content: center;
  margin-top: 15rpx;
}
.max-model .top .icon{
  width: 50rpx;
  height: 100%;
  position: absolute;
  left: 700rpx;
  top: 15rpx;
}
.max-model1 .model-left{
  width: 165rpx;
  height: 99.7%;
  color: #676767;
  background: #F6F6F8;
}
.max-model .model-left .mix-check{
  width: 100%;
  height: 96rpx;
  border: 1rpx solid #DFE0E2;
  text-align: center;
  line-height: 96rpx;
  overflow: hidden;
}
.max-model .model-left .mix-check-1{
  width: 100%;
  height: 96rpx;
  border: 1rpx solid #DFE0E2;
  border-left: 5rpx solid #FC7E72;
  border-right: 0rpx;
  text-align: center;
  line-height: 96rpx;
  background: #F2F2F2;
  color: #FC7E72;
  overflow: hidden;
}
.max-model .model-right{
  width: 565rpx;
  height: 99.7%;
  background: #F6F6F8;
}
.max-model .model-right .title{
  width: 100%;
  height: 70rpx;
  border-left: 5rpx solid transparent;
  background: #F2F2F2;
}
.max-model .model-right .title .content{
  padding-left: 10rpx;
  float: left;
  height: 44rpx;
  color: #888888;
  margin-top: 15rpx;
  border-left: 5rpx solid #FC7E72;
}
.max-model .model-right .title .arrow{
  width: 20rpx;
  height: 20rpx;
  border-right: 5rpx solid #FC7E72;
  border-bottom: 5rpx solid #FC7E72;
  border-top: 0;
  border-left: 0;
  transform: rotate(-45deg);
  margin-top: 20rpx;
  margin-right: 20rpx; 
  float: right;
}
.max-model .model-right .check-tatol{
  width: 555rpx;
  height: auto;
  float: left;
  color: #676767;
}
.max-model .model-right .check-tatol .mix-check{
  width: 266rpx;
  height: 80rpx;
  float: left;
  text-align: center;
  line-height: 80rpx;
  background: #F3F4F6;
  border: 1rpx solid #DFE0E2;
}
.wst-scroll-left{
  height: 99.7%;
  background: #F6F6F8;
}