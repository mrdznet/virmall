page {
	width: 100%;
	height: 100%;
	background: #fff;
}
.container {
	display: flex;
	flex-direction: column;
	width: 100%;
	height: 100%;
}
.form-model {
	margin:0 20rpx;
	margin-top: 16rpx;
	padding: 24rpx 0 4rpx 0;
	background: #fff;
	overflow: hidden;
}
.login-item {
	display: flex;
	height: 76rpx;
	font-size:30rpx;
	padding: 10rpx 0;
	position: relative;
}
.login-item:after {
	content: '';
	position: absolute;
	bottom: 0;
	left: -50%;
	width: 200%;
	height: 2rpx;
	background: #d9d9d9;
}
.login-item input {
	width: 100%;
	padding:0 10rpx;
	height: 76rpx;
	line-height: 76rpx;
}
.login-item .verify {
	width: 320rpx;
	height: 76rpx;
}
.log-model {
	height: 90rpx;
	padding: 60rpx 20rpx 0 20rpx;
}
.lo-button {
	height: 90rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	text-align: center;
	background-color: #ff3c3c;
	color: white;
	border-radius: 6rpx;
	font-size:30rpx;
}
.lo-button:active,.lo-button[disabled][type="default"],.lo-button[disabled]:not([type]) {
	color:#fff0f0;
	background:#f52f30;
	background-clip:padding-box;
}
.login-item .obtain {
	width:300rpx;
	height:72rpx;
	line-height:72rpx;
	color: #ff3c3c;
	font-size: 30rpx;
	border-color: #0baae4;
	background-color: #fff;
	border-radius:4rpx;
	border: 2rpx solid #ff3c3c;
}
.login-item .obtain:active,.login-item .obtain[disabled][type="default"],.login-item .obtain[disabled]:not([type]) {
	background: #fff;
	color:#df0202;
	border:2rpx solid #df0202;
	background-clip:padding-box;
}
.login-item .obtain::after{
  -webkit-transform:scale(0);
  transform:scale(0);
}
.wst-lo-agreement{
	position: relative;
	height:40rpx;
	line-height:4r0px;
	padding: 24rpx 20rpx 20rpx 70rpx;
	font-size:28rpx;
}
.wst-lo-agreement .radio{
	position: absolute;
	top:24rpx;
	left:20rpx;
}
radio .wx-radio-input{
  width:36rpx;
  height:36rpx;
}
radio .wx-radio-input.wx-radio-input-checked::before {
  font-size:32rpx;
}
.wst-lo-agreement span {
	color: #ff3c3c;
}
.wst-agreement{
  height:100%;
}